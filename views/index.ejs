        <span>
            <form action="/logout" method="post">
           <button type="submit" id="logout">logout</button>

        </form>
        </span>

    </div>
    <div class="main-container">
    <div class="table-container">
        <h2 >TASK LIST</h2>
    <table id="table1">

       
         <%todos.forEach(function(element){%>
            
            <tr>
            <td><%= element.task.data %> </td>
            <td><input type="checkbox"></td>
            <td>
                <form action="sendToUpdate" method="post">
                <button  type="submit" id="editButton" name="idToUpdate"value="<%=element.task.id %> ">edit</button>
            </form>
            </td>
            <td><form action="/delTodo" method="post" >
                <button type="submit"  name="delete" value= "<%=element.task.id %>" >delete</button>
            </form>
            </td>
           
        </tr>
            <% })%>
    
        
        
    </table>

    </div>
    <div class="input-container">
        <form action="/addTodo" method="post">
        <textarea name="task" id="text-area" cols="30" rows="10" placeholder="Enter Text here"></textarea>
        <button type="submit">submit</button>
    </form>

    </div>
